package org.formacio.repositori;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

@Service
public class GrupoService {
	
	GrupoRepositori grupoRepositori;

	public GrupoRepositori getGrupoRepositori() {
		return grupoRepositori;
	}

	@Autowired
	public void setGrupoRepositori(GrupoRepositori grupoRepositori) {
		this.grupoRepositori = grupoRepositori;
	}
	

	public void deleteAll() {
		grupoRepositori.deleteAll();
		
	}

	public void create(String nombre) { 
		grupoRepositori.save(new Grupo(nombre));
		
	}

	public Grupo getGrupo(String nombre) {
		return grupoRepositori.findByNombre(nombre);
	}

	public boolean existe(String grupo) {
		if (grupoRepositori.exists(grupo) == null){
			return false;
		}else{
			return false;
		}
	}
	

}
